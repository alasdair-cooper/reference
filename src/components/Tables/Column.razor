@typeparam T

@code {

    [Parameter]
    [EditorRequired]
    public required string Title { get; set; }
    
    [Parameter]
    public Func<T, object?>? Property { get; set; }
    
    [Parameter]
    public RenderFragment<CellContext<T>>? CellContent { get; set; } 
    
    [CascadingParameter]
    public ITable<T>? Table { get; set; }
    
    [Parameter]
    public int? Ordinal { get; set; } 

    protected override void OnParametersSet()
    {
        if (Table is null)
        {
            throw new InvalidOperationException($"{nameof(Column<>)} must be used within a {nameof(ITable<>)} component.");
        }

        Table.RegisterColumn(this);
    }

}