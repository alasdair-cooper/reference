<div class="footer">
    <button @onclick="GoToFirstPage">&lt;&lt;</button>
    <button @onclick="GoToPreviousPage">&lt;</button>
    <span>@Page</span>
    <button @onclick="GoToNextPage">&gt;</button>
    <button @onclick="GoToLastPage">&gt;&gt;</button>
</div>

@code {

    [Parameter]
    public int Page { get; set; }

    [Parameter]
    public EventCallback<int> PageChanged { get; set; }

    [Parameter]
    public int PageSize { get; set; }

    [Parameter]
    public EventCallback<int> PageSizeChanged { get; set; }

    [Parameter]
    public int TotalCount { get; set; }

    private async Task GoToPage(int page) => await PageChanged.InvokeAsync(page);

    private int TotalPages => TotalCount > 0 ? (int)Math.Ceiling((double)TotalCount / PageSize) : 0;

    private bool IsFirstPage() => Page == 1;

    private bool IsLastPage() => Page == TotalPages;

    private async Task GoToFirstPage()
    {
        if (!IsFirstPage())
        {
            await GoToPage(1);
        }
    }

    private async Task GoToPreviousPage()
    {
        if (!IsFirstPage())
        {
            await GoToPage(Page - 1);
        }
    }

    private async Task GoToNextPage()
    {
        if (!IsLastPage())
        {
            await GoToPage(Page + 1);
        }
    }

    private async Task GoToLastPage()
    {
        if (!IsLastPage())
        {
            await GoToPage(TotalPages);
        }
    }

}