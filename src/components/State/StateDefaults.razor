@using Humanizer
@using AlasdairCooper.Reference.Components.Utilities

@code {

    public static class DefaultContent
    {
        public static readonly RenderFragment Empty = @<text></text>;
        
        public static readonly RenderFragment<LoadingStateViewData> Loading = _ => @<progress aria-busy="true"></progress>;

        public static readonly RenderFragment<TimedOutStateViewData> TimedOut =
            x =>
                @<Alert Level="AlertLevel.Error">
                    Timed out after @x.Timeout.Humanize()
                </Alert>;

        public static readonly RenderFragment<ErrorStateViewData> Error =
            x =>
                @<ErrorSummary Exception="x.Exception" />;

        public static readonly RenderFragment<NotFoundStateViewData> NotFound =
            _ =>
                @<Alert Level="AlertLevel.Warning">
                    Item not found.
                </Alert>;

        public static readonly RenderFragment<UnauthorizedStateViewData> Unauthorized =
            x =>
                @<AuthorizationSummary
                    User="x.User"
                    Resource="x.Resource"
                    AuthorizeData="x.AuthorizeData" />;
    }

}