@typeparam T

@code {

    [Parameter]
    [EditorRequired]
    public required string Title { get; set; }
    
    [Parameter]
    public Func<T, object?>? Property { get; set; }
    
    [Parameter]
    public RenderFragment<T>? CellContent { get; set; } 
    
    [CascadingParameter]
    public Table<T>? Table { get; set; }

    protected override void OnParametersSet()
    {
        if (Table is null)
        {
            throw new InvalidOperationException($"{nameof(Column<T>)} must be used within a {nameof(Table<T>)} component.");
        }

        Table.RegisterColumn(this);
    }

}